<!DOCKTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <header>
      <% include ./partials/header %>
    </header>
    <h1 class="center">My Hobbies</h1>
    <hr/>
    <div class="row">
      <div class="col s12 m4">
        <h3>Add</h3>
        <form action='/hobby' method='post'>
         <input type='text' name='title' placeholder='Title' />
         <input type='text' name='origin' placeholder="Origin" />
         <button class='btn btn-waves' type='submit'>Add</button>
       </form>
        <!-- <h3>Edit</h3>
        <h3>Delete</h3> -->
      </div>
      <table class='table col m8 s12'>
       <thead>
         <th>Title</th>
         <th>Origin</th>
       </thead>
       <tbody>
         <% hobby.forEach( function(hobby) { %>
         <% var editUrl = "hobby/" + hobby.id +"/edit" %>
         <% var url = "/hobby/" + hobby.id + "?_method=DELETE" %>
           <tr>
             <td><%= hobby.title %></td>
             <td><%= hobby.origin %></td>
             <td>
               <a class="btn" href=<%= editUrl %>>Edit</a>
             </td>
             <td>
               <form method="POST" action=<%= url %>>
                 <button class="btn red">Delete</button>
               </form>
             </td>
             </tr>
         <% }); %>

       </tbody>
     </table>
    </div>
  </body>
</html>
